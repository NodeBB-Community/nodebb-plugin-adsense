<div class="mb-3">
	<label class="form-label" for="blockId">Ad block id:</label>
	<input type="text" class="form-control" id="blockId" name="blockId" placeholder="xxxxxxxxxx" />
</div>

<div class="mb-3">
	<label class="form-label" for="adFormat">data-ad-format</label>
	<select class="form-select" name="adFormat" id="adFormat">
		<option value="">(empty string)</option>
		<option value="auto" selected>auto</option>
		<option value="rectangle">rectangle</option>
		<option value="horizontal">horizontal</option>
		<option value="vertical">vertical</option>
	</select>
</div>

<div class="mb-3">
	<label class="form-label" for="style">style</label>
	<input class="form-control" name="style" id="style">
</div>